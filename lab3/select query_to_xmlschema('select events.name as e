select query_to_xmlschema('select events.name as event_name, array_agg(players.name) as players from results inner join events on results.event_id = events.event_id inner join players on results.player_id = players.player_id and players.country_id = E'USA' and results.medal = E'GOLD' and events.olympic_id = E'ATH2004' group by 1', false, false, '');
